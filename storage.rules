rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /products/{userId}/{allPaths=**} {
      // 모든 사람이 이미지를 읽을 수 있음
      allow read: if true;

      // 로그인한 사용자는 본인 폴더에만 이미지를 업로드할 수 있음
      allow write: if request.auth != null
        && request.auth.uid == userId;
    }
  }
}
